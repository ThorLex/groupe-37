# .env (développement)

# Configuration du serveur
NODE_ENV=development
PORT=3000
HOST=127.0.0.1

# MongoDB
MONGO_URI=mongodb://localhost:27017/app
MONGO_POOL_SIZE=5
MONGO_MAX_POOL_SIZE=10
MONGO_IDLE_TIMEOUT_MS=30000

# JWT
JWT_SECRET=devsecret

# Services internes (exemple)
ADMIN_SERVICE_URL=http://localhost:4003
USER_SERVICE_URL=http://localhost:4001
FILE_SERVICE_URL=http://localhost:4002
PAYMENT_SERVICE_URL=http://localhost:4004

# CORS
CORS_ORIGINS=*

# Limitation de requêtes
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (exemple)
EMAIL_PORT=4007
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=dev@email.com
SMTP_PASS=devpass
EMAIL_FROM=noreply@dev.com

# Divers
COMPRESSION_LEVEL=6
EVENT_LOOP_DELAY_THRESHOLD_MS=100
GC_INTERVAL_MS=30000
